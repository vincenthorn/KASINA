{
  "name": "kasina-meditation-app",
  "version": "1.0.0",
  "description": "Immersive Visual Meditation Experience",
  "main": "main.js",
  "author": "Kasina Meditation",
  "license": "MIT",
  "homepage": "./",
  "scripts": {
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build"
  },
  "build": {
    "appId": "com.kasina.meditation",
    "productName": "Kasina Meditation",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "../dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.healthcare-fitness",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  }
}